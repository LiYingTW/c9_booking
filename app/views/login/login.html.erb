<div class="ui one column stackable centered vertically padded page grid">
  <div class="twelve wide column">
    <%= form_for @user, :url => { :controller => 'login', :action => 'auth' }, class:"ui form inverted segment" do | f | %>
      <div class="ui two column middle aligned relaxed fitted stackable grid inverted segment">
        <div class="column">
          <h1 class="ui dividing header inverted">LOGIN</h1>
          <div class="field">
            <%= f.label :account, "Account" %>
            <div class="ui fluid icon input">
              <%= f.text_field :account, :autofocus=>true, :required=>true, :placeholder => "Account" %>
              <i class="user icon"></i>
            </div>
          </div>
        </br>
        <div class="field">
          <%= f.label :password, "Password" %>
          <div class="ui fluid icon input">
            <%= f.password_field :password, :required=>true,:placeholder => "Password" %>
            <i class="lock icon"></i>
          </div>
        </div>
      </br>
      <div class="ui fluid input">
        <%= f.submit "Login", class:"ui inverted teal submit button" %>
      </div>
    </div>
    <div class="ui vertical divider inverted">
      Or
    </div>
    <div class="center aligned column">
      <%= link_to({:controller => 'user', :action => 'new'}, class:"huge inverted pink ui labeled icon button") do %>
        <i class="signup icon"></i>
        REGISTER
      <% end %>
    </div>
  <% end %>
</div>
</div>
</div>
</div>
