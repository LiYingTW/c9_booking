<div class="ui one column stackable centered vertically padded page grid">
    <div class="twelve wide column">
        
            <div class="ui two column middle aligned relaxed fitted stackable grid inverted segment">
                <div class="column">
					<h1 class="ui dividing header inverted">Sign In</h1>
					<!--<p>or <a href="register.php">Create account</a></p>-->
					<%= form_for @user, :url => { :controller => 'login', :action => 'auth' } do | f | %>
					<form class="ui form inverted segment">		    
				      <div class="field">
				        <%= f.label :account, "Account" %>
				        <div class="ui fluid icon input">
				          <%= f.text_field :account %>
				          <i class="user icon"></i>
				        </div>
				      </div>
				      <div class="field">
				        <%= f.label :password, "Password" %>
				        <div class="ui fluid icon input">
				          <%= f.password_field :password %>
				          <i class="lock icon"></i>
				        </div>
				      </div>
				      </br>
				      <div class="ui fluid input">
				      		<%= f.submit "Login", class:"ui inverted teal submit button" %>
				      </div>
				      
				    </form>
				    <div class="ui vertical divider inverted">
				        Or
                    </div>
                    <div class="center aligned column">
                        <%= link_to({:controller => 'user', :action => 'new'}, class:"huge inverted pink ui labeled icon button") do %>
                            <i class="signup icon"></i>
                            Register
                        <% end %>
                    </div>
				    <% end %>
				  </div>
            </div>
    </div>
</div>